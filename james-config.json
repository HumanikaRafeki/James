{
    // Bot repository for /ping and /info
    "bot_repo": "https://github.com/HumanikaRafeki/James",

    // URL of Endless Sky repository
    "endless_sky_repo": "https://github.com/endless-sky/endless-sky",

    // Some data files come from endless_sky_data + file_path + endless_sky_data_query
    "endless_sky_data": "https://api.github.com/repos/endless-sky/endless-sky/contents/",
    "endless_sky_data_query": "?ref=master",
    "endless_sky_raw": "https://raw.githubusercontent.com/endless-sky/endless-sky/master/",

    // Path for swizzled images:
    "swizzled_thumbnail_path": "https://raw.githubusercontent.com/HumanikaRafeki/EndlessSky-Discord-Bot/develop/thumbnails/swizzles/";

    // Maximum length of text after expanding all phrases recursively
    "max_expanded_phrase_length": 10000,

    // Maximum number of recursion levels of phrases
    "max_phrase_recursion_depth": 10,

    // Maximum number of phrases to process in one expansion
    "max_phrase_expansions": 1000,

    // Area for bot to store repo clones
    "work_area": "work",

    // Maximum number of phrase expansions to return in /phrases, /say, and /news
    "max_phrase_command_repetitions": 20,

    // Maximum total size of all attachments (in bytes) to /phrases, /say, and /news
    "max_phrase_attachment_size": 307200,

    // Maximum sizes of images for /swizzleimage all=no
    "max_swizzle_image_width": 1280,
    "max_swizzle_image_height": 1280,

    // Maximum sizes of images for /swizzleimage all=yes
    "max_all_swizzle_width": 640,
    "max_all_swizzle_height": 800,

    // File containing the bot token. Must only contain that token, on the first line, with no other text.
    "bot_token_file": "bot-token.txt",

    // The /templates responses:
    "creator_templates": [
        {
            "id": "plugin",
            "url": "https://raw.githubusercontent.com/HumanikaRafeki/EndlessSky-Discord-Bot/develop/data/templates/exampleplugin.zip",
            "explanation": "Example Endless Sky plugin (a .zip archive)"
        },
        {
            "id": "outfit",
            "url": "https://raw.githubusercontent.com/HumanikaRafeki/EndlessSky-Discord-Bot/develop/data/templates/outfittemplate.blend",
            "explanation": "A Blender file for creating Endless Sky outfits (a .blend file)"
        },
        {
            "id": "ship",
            "url": "https://raw.githubusercontent.com/HumanikaRafeki/EndlessSky-Discord-Bot/develop/data/templates/shiptemplate.blend",
            "explanation": "A Blender file for creating in-space top view images of Endless Sky ships (a .blend file)"
        },
        {
            "id": "thumbnail",
            "url": "https://raw.githubusercontent.com/HumanikaRafeki/EndlessSky-Discord-Bot/develop/data/templates/thumbnail.blend",
            "explanation": "A Blender file for creating shipyard images of Endless Sky ships (a .blend file)"
        }
    ]
}
